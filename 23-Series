import java.util.Scanner;
class Test {
    public static void main(String[] args) {
         Scanner sc=new Scanner(System.in);
         int n=sc.nextInt();
         System.out.println(Series(n));
    }
    public static float Series(int n)
    {
        if(n<=0)//invalid Input
        return -1;
        
        float sum=0;
        for(int i=1;i<=n;i++)
            sum=sum+(float)(i*(i+1))/(i+2);
        return sum;
    }
}
