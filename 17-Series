//1^2+2^2+3^2+4^2+.........+n^2=?
import java.util.Scanner;
class Test {
    public static void main(String[] args)
    {
         Scanner sc=new Scanner(System.in);
         int n=sc.nextInt();
         System.out.println(Series(n));
    }
    public static long Series(int n)
    {
        if(n<=0)//invalid Input
        return -1;
        
        long sum=0;
        for(int i=1;i<=n;i++)
          sum+=(i*i);
          
       return sum;
    }
}
