import java.util.Scanner;
class Test {
    public static void main(String[] args) {
         Scanner sc=new Scanner(System.in);
         int n=sc.nextInt();
         System.out.println(CountDigits(n));
    }
    public static int CountDigits(int num)
    {
        if(num==0)
           return 1;
        int count=0;
         while(num!=0)
         {
             count++;
             num=num/10;
         }
         return count;
    }
}
