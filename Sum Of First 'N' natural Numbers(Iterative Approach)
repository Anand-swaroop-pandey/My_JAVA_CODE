import java.util.Scanner;
class Test {
    public static void main(String[] args) {
         Scanner sc=new Scanner(System.in);
         int n=sc.nextInt();
         System.out.println(sumNaturalNumbers(n));
    }
    public static int sumNaturalNumbers(int N)
    {
        int sum=0;
         for(int i=1;i<=N;i++)
         sum=sum+i;
         return sum;
    }
}
