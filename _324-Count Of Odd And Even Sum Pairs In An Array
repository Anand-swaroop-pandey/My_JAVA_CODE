import java.util.*;
public class Test
{
	  public static void main(String[] args) {
	      Scanner sc=new Scanner(System.in);
        System.out.println("Enter the Size of the Array");
        int n=sc.nextInt();
         if(n>1)
         {
            int[] arr=new int[n];
            System.out.printf("Enter %d Elements of Array:\n",n);
            for(int i=0;i<n;i++)
               arr[i]=sc.nextInt();
            countPairs(arr);
         }
         else
           System.out.println("Invalid Choice");
	}
	
	public static void countPairs(int[] arr)
	{
	   int n=arr.length;
       int cntOdd=0,cntEven=0;
       for(int i=0;i<n;i++)
         for(int j=i+1;j<n;j++)
           if((arr[i]+arr[j])%2==0)
              cntEven++;
           else
              cntOdd++;
              
      System.out.println("Count of Pairs With Even Sum ="+cntEven);
      System.out.println("Count of Pairs With Even Sum ="+cntOdd);
	}
}

//Optimal Approach
import java.util.*;
public class Test
{
	  public static void main(String[] args) {
	      Scanner sc=new Scanner(System.in);
        System.out.println("Enter the Size of the Array");
        int n=sc.nextInt();
         if(n>1)
         {
            int[] arr=new int[n];
            System.out.printf("Enter %d Elements of Array:\n",n);
            for(int i=0;i<n;i++)
               arr[i]=sc.nextInt();
            countPairs(arr);
         }
         else
           System.out.println("Invalid Choice");
	}
	
	public static void countPairs(int[] arr)
	{
	   int n=arr.length;
       int cntOdd=0,cntEven=0;
       for(int i=0;i<n;i++)
         if((arr[i]%2)==0)
            cntEven++;
         else
            cntOdd++;
        
       int cntEvenSumPairs=(cntEven*(cntEven-1))/2 + (cntOdd*(cntOdd-1))/2;
       int cntOddSumPairs=(cntEven*cntOdd);
        
       System.out.println("Count of Pairs With Even Sum ="+cntEvenSumPairs);
       System.out.println("Count of Pairs With Even Sum ="+cntOddSumPairs);
	}
}
