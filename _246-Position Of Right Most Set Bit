//Method 1
import java.util.Scanner;
public class Test
{
	public static void main(String[] args)
	{
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter N:");
	    int n=sc.nextInt();
	    System.out.printf("Position of RightMost Set Bit is :"+posOfRightMostSetBit(n));
	}
	
    public static int posOfRightMostSetBit(int num)
    {
       if(num==0)
         return -1; 
	 
       int position=0;
       for(int i=0;i<32;i++)
         {
             int mask=1<<i;
             if((num&mask)!=0)
             {
                 position++;// counting the position of the First set bit
                 break;
             }
             else
               position++;
         }
       return position;
    }
}

//Method2
import java.util.Scanner;
public class Test
{
	public static void main(String[] args)
	{
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter N:");
	    int n=sc.nextInt();
	    System.out.printf("Position of RightMost Set Bit is :"+posOfRightMostSetBit(n));
	}
	
    public static int posOfRightMostSetBit(int num)
    {
       if(num==0)
         return -1; 
         
         int position=0;
         while(num!=0)
            if((num&1)!=0)
            {
                 position++;// counting the position of first set bit
                 break;
            }
            else
            {
                 position++;
                 num=num>>1;
            }
        return position;
    }
}
