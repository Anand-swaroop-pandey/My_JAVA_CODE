//Method 1 (using Addition Operator)
import java.util.Scanner;
public class Test
{
	public static void main(String[] args)
	{
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter Number1");
        int num1=sc.nextInt();
        System.out.println("Enter Number2");
        int num2=sc.nextInt();
        System.out.printf("%d - %d = %d",num1,num2,minus(num1,num2));
	}
    public static int minus(int num1,int num2)//find (num1-num2)?
    {
       int diff=num1+twoscomplement(num2);
       return diff;
    }
    
    public static int twoscomplement(int num)
    {
       int diff=~num+1;
       return diff;
    }
}


//Method 2 (using Increment and Decrement Operator)
import java.util.Scanner;
public class Test
{
	   public static void main(String[] args)
	   {
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter Number1");
        int num1=sc.nextInt();
        System.out.println("Enter Number2");
        int num2=sc.nextInt();
        System.out.printf("%d - %d = %d",num1,num2,minus(num1,num2));
	  }
    public static int minus(int num1,int num2)//find (num1-num2)?
    {
      if(num2>0)
        while(num2!=0)
        {
          num2-- ; 
          num1--;
        }
      else if(num2<0)
        while(num2!=0)
        {
          num2++;
          num1++;
        }
     
     return num1;
    }
}

//Method 3(using Bitwise Operators) 
import java.util.Scanner;
public class Test
{
	public static void main(String[] args)
	{
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter Number1");
        int num1=sc.nextInt();
        System.out.println("Enter Number2");
        int num2=sc.nextInt();
        System.out.printf("%d - %d = %d",num1,num2,minus(num1,num2));
	}
    public static int minus(int num1,int num2)
    {
       while(num2!=0)
       {
         int diff=num1 ^ num2;
         int borrow=((~num1) & num2)<< 1;
         num1=diff;
         num2=borrow;
       }
       return num1;
    }
}
