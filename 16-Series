//1+2+3+4+.........+n=?
import java.util.Scanner;
class Main {
    public static void main(String[] args) {
         Scanner sc=new Scanner(System.in);
         int n=sc.nextInt();
         System.out.println(Series(n));
    }
    public static int Series(int n)
    {
        if(n<=0)//invalid Input
        return -1;
      int sum=0;
      for(int i=1;i<=n;i++)
      sum+=i;
      return sum;
    }
}
