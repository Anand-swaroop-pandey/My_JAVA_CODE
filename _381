//Bruteforce approach

import java.util.*;
public class Test
{
	public static void main(String[] args) {
	  Scanner sc=new Scanner(System.in);
	  System.out.println("Enter the size of the array :");
	  int n=sc.nextInt();
	  if(n<=0)
	  {
	     System.out.println("Invalid Choice");
	     return;
	  }
		
	  int[] arr=new int[n];
	  System.out.println("Enter "+n+" Elements :");
	  for(int i=0;i<n;i++)
	    arr[i]=sc.nextInt();
		 
	  System.out.println("Enter value of K :");
	  int k=sc.nextInt();
		
    subarraySum(arr,k);
	}
	
	public static void subarraySum(int[] arr,int k)
	{
     int n=arr.length,subSum;
      
     for(int i=0;i<n;i++)
     {
        subSum=0;
        for(int j=i;j<n;j++)
        {
          subSum+=arr[j];
          if(subSum==k)
          {
            System.out.println("Sum found between indexes "+i+" and "+j);
            break;
          }
        }
     }
     System.out.println("No subarray with given sum exists");
	}
}

//Better Approach

import java.util.*;
public class Test
{
	public static void main(String[] args) {
	  Scanner sc=new Scanner(System.in);
	  System.out.println("Enter the size of the array :");
	  int n=sc.nextInt();
	  if(n<=0)
	  {
	     System.out.println("Invalid Choice");
	     return;
	  }
		
	  int[] arr=new int[n];
	  System.out.println("Enter "+n+" Elements :");
	  for(int i=0;i<n;i++)
	    arr[i]=sc.nextInt();
		 
	  System.out.println("Enter value of K :");
	  int k=sc.nextInt();
		
    subarraySum(arr,k);
	}
	
	public static void subarraySum(int[] arr,int k)
	{
       int n=arr.length,subSum;
       int[] prefixSum=new int[n];
       
       for(int i=0;i<n;i++)
         if(i==0)
           prefixSum[i]=arr[i];
         else
           prefixSum[i]=prefixSum[i-1]+arr[i];
       
       for(int i=0;i<n;i++)
       {
          for(int j=i;j<n;j++)
          {
            if(i==0)
              subSum=prefixSum[j];
            else
              subSum=prefixSum[j]-prefixSum[i-1];
            
            if(subSum==k)
            {
               System.out.println("Sum found between indexes "+i+" and "+j);
               return;
            }
          }
       }
       System.out.println("No subarray with given sum exists");
	}
}

//Optimal Approach

