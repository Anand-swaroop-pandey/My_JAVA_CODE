import java.util.Scanner;
public class Test
{
  public static void main (String[]args)
  {

    Scanner sc = new Scanner (System.in);
    int num= sc.nextInt();
    System.out.println (decimalTobinary(num));
    System.out.println (decimalTobinary1(num));
    System.out.println (decimalTobinary2(num));
  }
  
  //Method 1(Naive Approach)//Will only work for Positive Integers ,fail for Negative Integers
  public static String decimalTobinary(int dec)
  {
     String bin="";
     while(dec!=0)
     {
        bin=bin+(dec%2);
        dec=dec/2;
     }
     return reverse(bin,bin.length()-1);
  }
  
    //Method 2(optimal approach)
  public static String decimalTobinary1(int dec)
  {
     String bin="";
     for(int i=0;i<(4*8);i++)
     {
       int mask=1<<i;
       if((dec & mask)==0)
         bin+=0;
       else
         bin+=1;
     }
     int index=removeTrailingZeros(bin);
     if(index==-1)
       return "0";
     String res=reverse(bin,index);
     return res;
  }
  
  public static int removeTrailingZeros(String str)
  {
      String res="";
      int i=(str.length()-1);
      while(i>=0 && str.charAt(i)=='0')
        i--;
      return i;
  }
  
  public static String reverse(String str,int index)
  {
      String rev="";
      for(int i=index;i>=0;i--)
           rev=rev+str.charAt(i);
      return rev;
  }
  
  
  //inbuilt function
  static String decimalTobinary2(int dec)
  {
    String bin_value =Integer.toBinaryString(dec) ;
    return bin_value;
  }
}
