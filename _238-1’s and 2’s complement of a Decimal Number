import java.util.Scanner;
public class Test
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter the Decimal Number:");
	    int num=sc.nextInt();
	    onesAndTwosComplement(num);
	}
	
   	public static void onesAndTwosComplement(int num)
	{
	   int onesComplement=~num;
	   int twosComplement=~num+1;//int twosComplement=-num;
           System.out.printf("1s Complement of "+num+" is = "+onesComplement+"    2s Complement of "+num+" is = "+twosComplement);
	}
}
