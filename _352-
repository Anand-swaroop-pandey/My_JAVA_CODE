//Method 1
import java.util.*;
public class Test
{
	public static void main(String[] args) {
	  Scanner sc=new Scanner(System.in);
	  System.out.println("Enter A String Consisting Of Lowercase English Letters :");
	  String str=sc.nextLine();
	  System.out.println("Resultant String :"+removeDuplicates(str));
	}
	
	public static String removeDuplicates(String str) 
	{
        int n=str.length();
 
        StringBuilder stack = new StringBuilder();

        for (int i=0;i<n;i++)
        {
            char ch=str.charAt(i);
            int currLen=stack.length();
            
            if(currLen!=0 && stack.charAt(currLen-1)==ch)
               stack.deleteCharAt(currLen-1);
            else
               stack.append(ch); 
        } 
            
        return stack.toString();
    }
}

//Method 2(Using Two Pointers)

import java.util.*;
public class Test
{
	public static void main(String[] args) {
	 Scanner sc=new Scanner(System.in);
	 System.out.println("Enter A String Consisting Of Lowercase English Letters :");
	 String str=sc.nextLine();
	 System.out.println("Resultant String :"+removeDuplicates(str));
	}
	
     public static String removeDuplicates(String str) 
     {
        int n=str.length();
        char[]res=new char[n];
        int k=0;
         
        for (int i=0;i<str.length();i++,k++)
        {
            char ch=str.charAt(i);
            if(k>0 && res[k-1]==ch) 
              k=k-2;
            else
              res[k]=ch;
        }
         
        String ans="";
        for(int i=0;i<k;i++) 
          ans+=res[i];
        
        return ans;
    }
}
