import java.util.Scanner;
class Test {
    public static void main(String[] args) {
         Scanner sc=new Scanner(System.in);
         int n=sc.nextInt();
         System.out.println(sumOfDigits_Iterative(n));
    }
    public static int sumOfDigits_Iterative(int num)
    {
        int sum=0;
        if(num==0)
          return 1;
         while(num!=0)
         {
             sum+=(num%10);
             num=num/10;
         }
         return sum;
    }
}
