import java.util.Scanner;
public class Test
{
	public static void main(String[] args)
	{
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter N:");
	    int n=sc.nextInt();
	    System.out.printf("Number Formed After Reversing Bits of %d is %d",n,reverseBits(n));
	}
    
    public static int reverseBits(int n)
    {
        int ans=0;
        for(int i=0;i<32;i++)
        {
            int mask1=1<<i;
            int temp=n & mask1;
            if(temp!=0)
            {
              int mask2=1<<(31-i);
               ans=ans | mask2;
            }
        }
        return ans;
    }
}

//Further Optimised

import java.util.Scanner;
public class Test
{
	public static void main(String[] args)
	{
	    Scanner sc=new Scanner(System.in);
	    System.out.println("Enter N:");
	    int n=sc.nextInt();
	    System.out.printf("Number Formed After Reversing Bits of %d is %d",n,reverseBits(n));
	}
    
    public static int reverseBits(int n)
    {
        int ans=0;
        for(int i=0;i<32;i++)
            if((n & (1<<i))!=0)
               ans=ans |1<<(31-i);
        return ans;  
    }
}
